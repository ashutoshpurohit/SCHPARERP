<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/diaryNote_summary_title"
        android:textSize="14sp"
        android:text="School holiday tomorrow"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/diaryNote_summary_date"
        android:textSize="12sp"
        android:text="27-Nov-2017"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:id="@+id/diaryNote_summary_msg"
        android:textSize="14sp"
        android:text="School will remain closed tomorrow on account of.."/>

    <View style="@style/Divider"></View>

</LinearLayout>